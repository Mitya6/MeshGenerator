<Window x:Class="WpfGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mesh Generator" Height="350" Width="250">
    <DockPanel>
        <Label Content="Select input file:" DockPanel.Dock="Top" Margin="5"/>
        <DockPanel DockPanel.Dock="Bottom" Margin="5" LastChildFill="False">
            <Label x:Name="lblWorking" Content="Working..." Visibility="Hidden" />
            <Button x:Name="btnStart" Content="Start" Width="75" DockPanel.Dock="Right" Click="btnStart_Click"/>
        </DockPanel>
        <ListBox x:Name="lbInputFiles" Margin="5,0,5,0"/>
    </DockPanel>
</Window>
